    </activity>

    <activity
      android:name=".Register"
      android:label="@string/app_name">
    </activity>

    <activity
      android:name=".MainActivity"
      android:label="@string/app_name"
      android:launchMode="singleTop">
    </activity>

    <activity
      android:name=".activity2"
      android:label="@string/app_name"
